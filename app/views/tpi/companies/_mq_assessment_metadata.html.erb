<% if assessment&.assessment_date && assessment.assessment_date.year >= 2025 %>
  <div class="mq-assessment-metadata__row">
    <% if assessment.fiscal_year.present? %>
      <div class="mq-assessment-metadata__item">
        <span class="mq-assessment-metadata__label">Fiscal Year:</span>
        <span class="mq-assessment-metadata__value"><%= assessment.fiscal_year %></span>
      </div>
    <% end %>
    <% if assessment.assessment_type.present? %>
      <div class="mq-assessment-metadata__item">
        <span class="mq-assessment-metadata__label">Assessment Type:</span>
        <span class="mq-assessment-metadata__value"><%= assessment.assessment_type %></span>
      </div>
    <% end %>
    <% if assessment.created_at.present? %>
      <div class="mq-assessment-metadata__item">
        <span class="mq-assessment-metadata__label">Upload Date:</span>
        <span class="mq-assessment-metadata__value"><%= assessment.created_at.strftime('%d %B %Y') %></span>
      </div>
    <% end %>
  </div>
<% end %>

