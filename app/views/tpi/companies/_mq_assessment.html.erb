<div class="columns">
  <div class="column">
    <div class="mq-assessment-box">
      <p>
        Current level
      </p>
      <div class="mq-level">
        <%= assessment.level %>
        <%= assessment.status %>
      </div>
      <p>
        <%= t("tpi.company.level_description.#{assessment.level.to_i}") %></h3>
      </p>

      <div>[TODO] summary of answers</div>
    </div>
  </div>

  <div class="column">
    <div class="mq-assessment-box">
      <div>Nr of assessments: <%= assessment.previous_assessments.size + 1 %></div>
      <div>
        <%= line_chart(
          assessments_levels_chart_data_tpi_company_path(@company.id, mq_assessment_id: assessment.id),
          library: mq_company_no_of_assessments_chart_options
          ) %>
      </div>
    </div>
  </div>
</div>

<div class="company-assessments">
  <div class="company-assessments questions">
    <% assessment.questions_by_level.each do |level, questions| %>
      <div class="assessment-level">
        <h3>Level <%= level %>: <%= t("tpi.company.level_description.#{level}", default: 'Answers') %></h3>
        <div class="assessment-details">
          <% questions.each do |question| %>
            <div class="container">
              <div class="assessment-answer">(<%= question.answer %>)</div>
              <div class="assessment-question"><%= question.question %></div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
