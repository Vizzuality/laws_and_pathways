<% content_for :page_title, "Search results - Transition Pathway Initiative" %>

<section class="section">
  <div class="container search-results">
    <h1>Search results for: <%= @query %></h1>

    <% unless @sectors.any? || @companies.any? || @publications_and_articles.any? %>
      <p class="search-results__empty">Your search didn't return any results. Try another term or <%= link_to 'explore the tool', tpi_sectors_path, class: 'link' %>.</p>
    <% end %>

    <% if @sectors.any? %>
      <h3>Sectors</h3>
      <ul>
        <% @sectors.each do |sector| %>
          <li><%= link_to sector.name, tpi_sector_path(sector) %></li>
        <% end %>
      </ul>
    <% end %>

    <% if @companies.any? %>
      <h3>Companies</h3>
      <ul>
        <% @companies.each do |company| %>
          <li><%= link_to company.name, tpi_company_path(company) %></li>
        <% end %>
      </ul>
    <% end %>

    <% if @publications_and_articles.any? %>
      <h3>Publications and news</h3>
      <%= render 'tpi/publications/promoted', publications_and_articles: @publications_and_articles, count: @publications_and_articles.count %>
    <% end %>
  </div>
</section>
