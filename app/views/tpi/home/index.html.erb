<section class="section tpi-home__assessment-types">
  <div class="container">
    <h2 class="section-title is-size-4">
      Check out the TPI Centre's online tool
    </h2>

    <div class="container">
      <div class="section-description">
        <%= link_to tpi_sectors_path, class: 'assessment-box publicly-listed-equities' do %>
          <div class="assessment-box__header">Climate assessments:</div>
          <div class="assessment-box__title">Publicly listed equites</div>
        <% end %>
        <%= link_to tpi_banks_path, class: 'assessment-box banks' do %>
          <div class="assessment-box__header">Climate assessments:</div>
          <div class="assessment-box__title">Banks</div>
        <% end %>
      </div>
    </div>
  </div>
</section>


<section class="section tpi-home__promoted-publications">
  <div class="container">
    <div class="promoted-publications__title">
      <h2 class="is-size-4 promoted-publications__title-text">Publications and news</h2>

      <%= link_to 'View all publications and news', tpi_publications_path, class: 'button is-secondary is-hidden-touch' %>
    </div>

    <%= render "tpi/publications/promoted", publications_and_articles: @publications_and_articles %>
    <a href="/publications" class="view-all-button button is-secondary is-hidden-desktop">View all publications and news</a>
  </div>
</section>

<hr />

<section class="section partners">
