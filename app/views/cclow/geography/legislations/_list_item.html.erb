<li>
  <h5 class="title"><%= title %></h5>
  <div class="meta">
    <div>
      <img src=<%= asset_path "icons/legislation_types/#{legislation_type}.svg"%> alt="">
      <%= legislation_type&.humanize %>
    </div>
    <% if date_passed %>
      <div>Passed in <%= date_passed&.year %></div>
    <% end %>
  </div>
  <div class="description">
    <%= description&.html_safe %>
  </div>
</li>
