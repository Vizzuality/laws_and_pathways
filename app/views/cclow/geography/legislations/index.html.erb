<% content_for :page_title, "Climate Laws - #{@geography.name} - Laws and Policies" %>

<% content_for :manage_data_button do %>
  <%= render 'cclow/cclow/manage_data',
    link: admin_legislations_path('q[geography_id_eq]': @geography, 'q[legislation_type_eq]': params[:scope] == :laws ? 'legislative' : 'executive') %>
<% end %>

<div class="geography-laws">
  <div class="container">
    <h3><%= params[:scope] == :laws ? 'Laws' : 'Policies' %></h3>
    <% if @legislations.any? %>
      <ul class="content-list">
        <% @legislations.uniq.each do |l| %>
          <%= render 'cclow/geography/legislations/list_item', legislation: l %>
        <% end %>
      </ul>
    <% else %>
      <p>No data available for <%= @geography.name %>.</p>
    <% end %>
  </div>
</div>
