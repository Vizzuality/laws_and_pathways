<section class="hero">
  <div class="hero-head">
    <div class="navbar">
      <div class="container">
        <div class="brand">
          <%= link_to cclow_root_path do %>
            <img src="<%= asset_path 'logo/CCLOW_logo.svg'%>" />
          <% end %>
        </div>
        <div class="navbar-menu">
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="menu">
                <% if @header_pages.any? %>
                  <% @header_pages.each do |page| %>
                    <a href="<%= page[:slug] %>"><%= page[:title] %></a>
                  <% end %>
                <% end %>
                <% if @both.any? %>
                  <% @both.each do |page| %>
                    <a href="<%= page[:slug] %>"><%= page[:title] %></a>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="hero-body">
    <div class="container">
      <h2 class="title">Climate Change Laws of the World</h2>
      <div class="columns">
        <div class="column is-two-thirds">
          <p>Use our database to search and browse climate laws, policies and litigation cases across all countries.</p>
        </div>
      </div>

      <%= react_component("LawsDropdown", {
        geographies: @search_geographies,
        lawsAndPolicies: @search_laws_and_policies,
        litigations: @search_litigations,
        targets: @search_targets,
        recentDate: @search_recent_date
      }) %>
      <div class="overview-section">
        <div>
          <div class="item-name-block">
            <div class="img-type-container">
              <span class="icon icon__paper">
            </div>
            <div>Climate laws and policies</div>
          </div>
          <div class="value-block">
            <div class="circle">
              <%= Legislation.count %>
            </div>
          </div>
        </div>
        <div>
          <div class="item-name-block">
            <div class="img-type-container">
              <span class="icon icon__scale">
            </div>
            <div>Climate litigation cases</div>
          </div>
          <div class="value-block">
            <div class="circle">
              <%= Litigation.count %>
            </div>
          </div>
        </div>
        <div>
          <div class="item-name-block">
            <div class="img-type-container">
              <span class="icon icon__white-flag">
            </div>
            <div>Featured country profiles</div>
          </div>
          <div class="value-block">
            <ul>
              <li><a href="#">China</a></li>
              <li><a href="#">United States</a></li>
              <li><a href="#">European Union</a></li>
              <li><a href="#">India</a></li>
              <li><a href="#">Indonesia</a></li>
            </ul>
          </div>
        </div>
        <div>
          <div class="item-name-block">
            <div class="img-type-container">
              <span class="icon icon__globe">
            </div>
            <div>Visualise data on the map</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="arrow-btn">
    <i class="fa fa-angle-down fa-2x"></i>
  </div>
</section>
