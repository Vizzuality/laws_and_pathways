<li class="content-item">
  <h5 class="title"><%= highlight legislation.link, @query %></h5>
  <div class="meta">
    <div>
      <img class="flag" src=<%= asset_path "flags/#{legislation.geography.iso}.svg"%> alt="">
      <%= legislation.geography.name %>
    </div>
    <div>
      <img class="flag" src=<%= asset_path "icons/legislation_types/#{legislation.legislation_type}.svg"%> alt="">
      <%= legislation.legislation_type&.humanize %>
    </div>
    <div>Passed in <%= legislation.date_passed&.year %></div>
  </div>
  <div class="description">
    <%= highlight legislation.description&.html_safe, @query %>
  </div>
</li>

