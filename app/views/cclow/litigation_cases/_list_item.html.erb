<li>
  <h5 class="title"><%= highlight litigation.title, @query %></h5>
  <div class="meta">
    <div>
      <img src=<%= asset_path "flags/#{litigation.jurisdiction.iso}.svg"%> alt="">
      <%= litigation.jurisdiction.name %>
    </div>
    <% if litigation.started_event.present? %>
      <div>Opened in <%= litigation.started_event.date&.year %></div>
    <% end %>
  </div>

  <p>
    <%= highlight litigation.summary&.html_safe, @query %>
  </p>
</li>
