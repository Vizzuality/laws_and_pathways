<% content_for :page_title, "#{@page.title} - Climate Change Laws of the World" %>
<% content_for :page_description, strip_tags(@page.description).first(160) %>

<div class="pages__content">
  <div class="pages__title"><%= @page.title %></div>
  <div class="pages__description">
    <%= @page.description&.html_safe %>
  </div>
  <% @page.contents.order(:created_at).each do |content| %>
    <%= render "shared/pages/#{content.content_type.presence || 'regular'}", content: content %>
  <% end %>
</div>
