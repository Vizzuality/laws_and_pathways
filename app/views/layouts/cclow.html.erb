<!DOCTYPE html>
<html>
  <head>
    <title>CCLOW</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'cclow' %>
  </head>

  <body>
    <div class="container">
      <%= render "layouts/cclow/header" %>
      <%= render_breadcrumb %>
    </div>
    <main>
      <div class="container">
        <div class="content">
          <%= content_for?(:content) ? yield(:content) : yield %>
        </div>
      </div>
    </main>
    <footer>
      Footer
    </footer>
  </body>
</html>
