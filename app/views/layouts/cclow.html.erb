<!DOCTYPE html>
<html>
  <head>
    <title>CCLOW</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'cclow' %>
    <%= javascript_pack_tag 'cclow' %>
  </head>
  <body>
    <% if current_page?(cclow_root_path) %>
      <%= render "cclow/home/hero" %>
    <% else %>
      <%= render "layouts/cclow/header" %>
    <% end %>
    <main>
      <div class="container">
        <%= render_breadcrumb %>
        <div>
          <%= content_for?(:content) ? yield(:content) : yield %>
        </div>
      </div>
    </main>
    <%= render "layouts/cclow/footer" %>
  </body>
</html>
