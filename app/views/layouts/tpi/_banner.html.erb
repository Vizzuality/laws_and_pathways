<div class="banner">
  <div class="container">
    <div class="columns">
      <div class="column is-3 logo">
        <%= link_to tpi_root_path do %>
          <img
            src="<%= asset_path 'logo/TPI_logo@2x.png' %>"
            class="banner__logo"
            alt="Transition Pathway Initiative Logo"
          />
        <% end %>
      </div>
      <%= content_for?(:hosted_by) ? content_for(:hosted_by) : render('layouts/tpi/hosted_by') %>
    </div>
  </div>
</div>
