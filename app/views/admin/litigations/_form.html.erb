<%= semantic_form_for [:admin, resource], builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.semantic_errors(*f.object.errors.keys) %>
  <%= f.inputs 'Step Details' do %>
    <%= f.input :title %>
    <%= f.input :location %>
    <%= f.input :document_type, as: :select, collection: array_to_select_collection(Litigation::DOCUMENT_TYPES) %>
    <%= f.input :summary, as: :trix %>
    <%= f.input :core_objective, as: :trix %>
  <% end %>

  <%= f.inputs 'Documents' do %>
    <%= render 'admin/documents/list', form: f %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit %>
    <%= f.cancel_link :back %>
  <% end %>
<% end %>
