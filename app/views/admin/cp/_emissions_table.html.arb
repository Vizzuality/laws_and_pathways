if emissions.empty?
  div class: 'padding-20' do
    'No emission or target values for this assessment'
  end
else
  emissions_all_years = emissions.keys

  table class: 'table cell-padding-sm cell-centered' do
    thead do
      emissions_all_years.map { |year| th year }
    end
    tbody do
      tr do
        emissions_all_years.map do |year|
          td { emissions[year] || 'N/A' }
        end
      end
    end
  end
end
